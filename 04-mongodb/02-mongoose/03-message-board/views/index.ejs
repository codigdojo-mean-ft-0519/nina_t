<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/styles.css">
    <title>Message Board</title>
</head>
<body>
    <div class="container">
        <h1>The Dojo Message Board</h1>
        <hr>
        <form action="/messages" method="POST" autocomplete="off">
            <label for="name">Name:</label>
            <input type="text" name="author">
            <label for="message">Message:</label>
            <textarea name="messageContent"></textarea>
            <input type="submit" value="Post message">
        </form>
        <% for (const message of messages) { %>
        <div class="message-group">
            <h2>Name: <%=message.author%></h2>
            <h2>Message: <%=message.messageContent%></h2>

            <% for (const comment of message.comments) { %>
            <div class="comment-group">
                <p>Name: <%=comment.author %> </p>
                <p>Comment:<%=comment.commentContent %></p>
            <% } %>
                <form action="/comment/<%=message._id %>" method="POST" autocomplete="off">
                    <input type="hidden" name="message" value="<%=message._id %>">
                    <label for="name">Name:</label>
                    <input type="text" name="author">
                    <label for="comment">Message:</label>
                    <textarea name="commentContent"></textarea>
                    <input type="submit" value="Post comment">
                </form>
            </div>
            <% } %>
        </div>
    </div>
</body>
</html>